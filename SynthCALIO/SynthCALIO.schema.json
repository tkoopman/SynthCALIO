{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "LeveledItems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Name",
          "Entries"
        ],
        "properties": {
          "Name": {
            "type": "string"
          },
          "Flags": {
            "$ref": "#/definitions/Flags"
          },
          "ChanceNone": {
            "$ref": "#/definitions/ChanceNone"
          },
          "SkipIfMissing": {
            "$ref": "#/definitions/SkipIfMissing"
          },
          "SPID": {
            "$ref": "#/definitions/SPID"
          },
          "Entries": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/LeveledItemEntry"
            }
          }
        }
      }
    },
    "Outfits": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "Name",
          "Items"
        ],
        "properties": {
          "Name": {
            "type": "string"
          },
          "SkipIfMissing": {
            "$ref": "#/definitions/SkipIfMissing"
          },
          "SPID": {
            "$ref": "#/definitions/SPID"
          },
          "DefaultOutfit": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/FormOrEditorID"
            }
          },
          "SleepingOutfit": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/FormOrEditorID"
            }
          },
          "Items": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/FormOrEditorID"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ChanceNone": {
      "type": [
        "number",
        "string"
      ],
      "multipleOf": 0.01,
      "minimum": 0,
      "maximum": 1,
      "pattern": "^[0-9]{1,3}%$"
    },
    "OptionalFormOrEditorID": {
      "description": "FormID or EditorID. Can add ? prefix to make the entry optional. This will not count towards the SkipIfMissing count. No spaces between ? and FormID or EditorID.",
      "type": "string"
    },
    "FormOrEditorID": {
      "description": "FormID or EditorID.",
      "type": "string"
    },
    "LeveledItemEntry": {
      "type": "string",
      "pattern": "^(?'Optional'\\?)?(?:\\[(?:[Ll][vV])?(?'Level'\\d+)\\]\\s?)?(?:(?'Count'\\d+)x\\s?)?(?'ID'.+)$"
    },
    "Flags": {
      "title": "Flags to set on the Leveled Item List",
      "anyOf": [
        {
          "description": "Should be comma separated list of valid flags (CalculateForEachItemInCount, CalculateFromAllLevelsLessThanOrEqualPlayer, SpecialLoot, UseAll)",
          "type": "string"
        },
        {
          "type": "array",
          "enum": [
            "CalculateForEachItemInCount",
            "CalculateFromAllLevelsLessThanOrEqualPlayer",
            "SpecialLoot",
            "UseAll"
          ]
        }
      ]
    },
    "SkipIfMissing": {
      "type": "integer",
      "minimum": -1
    },
    "SPID": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}